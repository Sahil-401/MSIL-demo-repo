pipeline {
  agent any

  environment {
    IMAGE_NAME = "bom.ocir.io/oscemea006/demo-app-repo"
    KUBE_CTX   = "context-oke-amaaaaaaksfnvmaahftwc5deha4gq3zu"
    PROD_NS    = "prod"
  }

  stages {

    stage('Approval to Deploy to PROD') {
      steps {
        input message: 'Approve deployment to PROD?'
      }
    }

    stage('Read Last DEV Image Tag') {
      steps {
        script {
          env.IMAGE_TAG = sh(
            script: "cat /var/lib/jenkins/last-dev-image.txt",
            returnStdout: true
          ).trim()
        }
      }
    }

    stage('Deploy to PROD') {
      steps {
        sh """
          sed "s/IMAGE_TAG/${IMAGE_TAG}/g" k8s/prod/deployment.yaml | \
          kubectl --context ${KUBE_CTX} -n ${PROD_NS} apply -f -
        """
      }
    }

    stage('Verify PROD Deployment') {
      steps {
        sh """
          kubectl --context ${KUBE_CTX} -n ${PROD_NS} rollout status deployment/hello-nginx
        """
      }
    }
  }
}
